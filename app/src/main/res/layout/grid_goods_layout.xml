<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center" android:weightSum="1">
    <ImageView android:id="@+id/goodsImg"
               android:layout_width="154dp"
               android:layout_height="93dp" android:contentDescription="商品图片"
               android:src="@drawable/niao_niao_lao_huo_guo"/>
    <TextView android:id="@+id/goodsName"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="骉骉老火锅4人餐"
              android:layout_margin="3dp"
              android:textSize="14sp"/>
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <TextView android:id="@+id/goodsPrice"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="¥138"
                  android:textSize="18sp"
                  android:textColor="@android:color/holo_red_dark"/>
        <TextView android:id="@+id/goodsOffIno"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="手机购买立减¥20"
                  android:textSize="14sp"
                  android:layout_marginLeft="5dp"
                  android:textColor="@android:color/white"
                  android:background="@android:color/holo_red_dark"/>
    </LinearLayout>

</LinearLayout>