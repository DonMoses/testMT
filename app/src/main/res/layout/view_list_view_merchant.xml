<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/item_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/barbecue" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="醉烧刀自助海鲜豆捞"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/info_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:maxLines="2"
                android:text="[双流机场] 59 单人自助，免费Wifi"
                android:textSize="14sp"
                android:layout_below="@id/title_text"/>


            <TextView
                android:id="@+id/price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="59元"
                android:textColor="@android:color/darker_gray"
                android:textSize="18sp"
                android:layout_below="@id/info_text"
                android:layout_alignParentBottom="true"
                android:gravity="bottom"/>

            <TextView
                android:id="@+id/off_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_green_light"
                android:text="立减5元"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                android:layout_marginLeft="5dp"
                android:layout_alignBottom="@id/price_text"
                android:layout_toRightOf="@id/price_text"/>

            <TextView
                android:id="@+id/count_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已售16544"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                android:layout_alignBottom="@id/price_text"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:gravity="end"
                 />

        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />
</LinearLayout>